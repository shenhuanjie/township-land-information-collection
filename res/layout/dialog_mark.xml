<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="150dp"
    android:layout_height="match_parent"
    android:background="@drawable/mark_bg"
    android:padding="10dp" >

    <TextView
        android:id="@+id/dialog_mark_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:lineSpacingExtra="3dp"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/dialog_mark_iv_photo"
        android:layout_width="120dp"
        android:layout_height="80dip"
        android:layout_below="@+id/dialog_mark_tv_title"
        android:background="@drawable/nophoto"
        android:scaleType="fitEnd"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/dialog_mark_tv_adress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_mark_iv_photo"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:lineSpacingExtra="3dp"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/dialog_mark_tv_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_mark_tv_adress"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:lineSpacingExtra="3dp"
        android:textSize="16sp" />

</RelativeLayout>