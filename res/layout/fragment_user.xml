<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_grey_light"
    android:orientation="vertical"
    android:paddingTop="20dp" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/fragment_user_rl_map"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/relativelayout_selector"
                android:clickable="true"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" >

                <ImageView
                    android:id="@+id/fragment_user_imageview_exit1"
                    android:layout_width="56dp"
                    android:layout_height="44dp"
                    android:background="@drawable/icon_map" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/fragment_user_imageview_exit1"
                    android:text="资源地图"
                    android:textSize="17sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/fragment_user_rl_editpsw"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/relativelayout_selector"
                android:clickable="true"
                android:gravity="center_vertical"
                android:paddingLeft="23dp"
                android:paddingRight="23dp" >

                <ImageView
                    android:id="@+id/fragment_user_imageview_psw"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/icon_edit_pwd" />

                <TextView
                    android:id="@+id/fragment_user_tv_edit_psw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/fragment_user_imageview_psw"
                    android:text="修改密码"
                    android:textSize="17sp" />
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/divide_px_middle"
                android:background="@color/background_grey_middle" />

            <RelativeLayout
                android:id="@+id/fragment_user_rl_question"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/relativelayout_selector"
                android:clickable="true"
                android:gravity="center_vertical"
                android:paddingLeft="23dp"
                android:paddingRight="23dp" >

                <ImageView
                    android:id="@+id/fragment_user_imageview_ques"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/icon_question" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/fragment_user_imageview_ques"
                    android:text="常见问题"
                    android:textSize="17sp" />
            </RelativeLayout>

            <!--
            <RelativeLayout
                android:id="@+id/fragment_user_rl_collection_list"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:paddingLeft="23dp"
                android:paddingRight="23dp"
                android:clickable="true"
                android:gravity="center_vertical"
                android:background="@drawable/relativelayout_selector" >

                <ImageView
                    android:id="@+id/fragment_user_imageview_collect_list"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/icon_list" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/fragment_user_imageview_collect_list"
                    android:text="采集记录"
                    android:textSize="17sp" />
            </RelativeLayout>
            -->

            <RelativeLayout
                android:id="@+id/fragment_user_rl_exit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/relativelayout_selector"
                android:clickable="true"
                android:gravity="center_vertical"
                android:paddingLeft="23dp"
                android:paddingRight="23dp" >

                <ImageView
                    android:id="@+id/fragment_user_imageview_exit"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/icon_exit" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/fragment_user_imageview_exit"
                    android:text="退出"
                    android:textSize="17sp" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>