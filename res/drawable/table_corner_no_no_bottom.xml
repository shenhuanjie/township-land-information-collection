<?xml version="1.0" encoding="utf-8"?>
<!-- 不带圆角 白色背景 灰色边框 无下边框 长方体 -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>  
        <shape>  
            <solid android:color="#9000" />  
            <stroke  
                android:width="1dp"  
                android:color="#ADDCD1" />  
        </shape>  
    </item>  
    <item  
        android:left="1dp"  
        android:right="1dp"  
        android:top="1dp">  
        <shape>  
            <solid android:color="#E2F3D3" />  
            <stroke  
                android:width="1dp"  
                android:color="#ADDCD1" />  
        </shape>  
    </item>  

</layer-list>
